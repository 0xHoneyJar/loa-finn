# Required
ANTHROPIC_API_KEY=sk-ant-...

# R2 Storage (required for production)
R2_ACCESS_KEY_ID=
R2_SECRET_ACCESS_KEY=
R2_ENDPOINT=
R2_BUCKET=loa-finn-data

# Git (optional, for git sync tier)
GIT_TOKEN=

# Server
PORT=3000
HOST=0.0.0.0

# Agent
MODEL=claude-opus-4-6
THINKING_LEVEL=medium

# Data
DATA_DIR=/data

# Auth (required for production)
FINN_AUTH_TOKEN=
FINN_CORS_ORIGINS=localhost:*
FINN_ALLOW_BASH=false
FINN_RATE_LIMIT_WINDOW_MS=60000
FINN_RATE_LIMIT_MAX=60
FINN_CSRF_ENABLED=true

# Scheduler intervals
SYNC_INTERVAL_MS=30000
GIT_SYNC_INTERVAL_MS=3600000
HEALTH_INTERVAL_MS=300000

# Identity
BEAUVOIR_PATH=grimoires/loa/BEAUVOIR.md

# Git sync
GIT_REMOTE=origin
GIT_BRANCH=main
GIT_ARCHIVE_BRANCH=finn/archive
