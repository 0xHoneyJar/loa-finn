{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://loa-finn.local/schemas/cheval-request.schema.json",
  "title": "ChevalRequest v1.0",
  "description": "Machine-mode request schema for cheval.py subprocess invocation (SDD ยง6.1)",
  "type": "object",
  "properties": {
    "schema_version": {
      "const": 1
    },
    "provider": {
      "type": "object",
      "properties": {
        "name": { "type": "string", "minLength": 1 },
        "type": {
          "type": "string",
          "enum": ["openai", "openai-compatible"]
        },
        "base_url": { "type": "string", "format": "uri" },
        "api_key": { "type": "string", "minLength": 1 },
        "connect_timeout_ms": { "type": "integer", "minimum": 100, "default": 5000 },
        "read_timeout_ms": { "type": "integer", "minimum": 1000, "default": 60000 },
        "total_timeout_ms": { "type": "integer", "minimum": 1000, "default": 300000 }
      },
      "required": ["name", "type", "base_url", "api_key"]
    },
    "model": {
      "type": "string",
      "minLength": 1,
      "description": "Model ID to use (e.g., gpt-4o, kimi-k2-thinking)"
    },
    "messages": {
      "type": "array",
      "items": { "$ref": "#/$defs/CanonicalMessage" },
      "minItems": 1
    },
    "tools": {
      "type": "array",
      "items": { "$ref": "#/$defs/ToolDefinition" }
    },
    "options": {
      "type": "object",
      "properties": {
        "temperature": { "type": "number", "minimum": 0, "maximum": 2 },
        "top_p": { "type": "number", "minimum": 0, "maximum": 1 },
        "max_tokens": { "type": "integer", "minimum": 1 },
        "stop": {
          "type": "array",
          "items": { "type": "string" }
        },
        "tool_choice": {
          "type": "string",
          "enum": ["auto", "required", "none"]
        }
      }
    },
    "metadata": {
      "type": "object",
      "properties": {
        "agent": { "type": "string" },
        "tenant_id": { "type": "string", "default": "local" },
        "nft_id": { "type": "string", "default": "" },
        "trace_id": {
          "type": "string",
          "pattern": "^[a-f0-9-]{36}$",
          "description": "UUID v4 trace identifier"
        }
      },
      "required": ["agent", "trace_id"]
    },
    "retry": {
      "type": "object",
      "properties": {
        "max_retries": { "type": "integer", "minimum": 0, "maximum": 10, "default": 3 },
        "base_delay_ms": { "type": "integer", "minimum": 100, "default": 1000 },
        "max_delay_ms": { "type": "integer", "minimum": 1000, "default": 30000 },
        "jitter_percent": { "type": "integer", "minimum": 0, "maximum": 100, "default": 25 },
        "retryable_status_codes": {
          "type": "array",
          "items": { "type": "integer" },
          "default": [429, 500, 502, 503, 504]
        }
      }
    },
    "hmac": {
      "type": "object",
      "properties": {
        "signature": {
          "type": "string",
          "pattern": "^[a-f0-9]{64}$",
          "description": "HMAC-SHA256 hex-encoded signature"
        },
        "nonce": {
          "type": "string",
          "minLength": 16,
          "description": "Random nonce for replay prevention"
        },
        "issued_at": {
          "type": "string",
          "format": "date-time",
          "description": "ISO 8601 timestamp for clock skew validation"
        }
      },
      "required": ["signature", "nonce", "issued_at"]
    }
  },
  "required": ["schema_version", "provider", "model", "messages", "metadata", "hmac"],
  "$defs": {
    "CanonicalMessage": {
      "type": "object",
      "properties": {
        "role": {
          "type": "string",
          "enum": ["system", "user", "assistant", "tool"]
        },
        "content": {
          "oneOf": [
            { "type": "string" },
            { "type": "null" }
          ],
          "description": "Message content. null on assistant tool-call turns."
        },
        "tool_calls": {
          "type": "array",
          "items": { "$ref": "#/$defs/ToolCall" }
        },
        "tool_call_id": {
          "type": "string",
          "description": "Present for tool result messages"
        },
        "name": {
          "type": "string",
          "description": "Tool name for tool result messages"
        }
      },
      "required": ["role", "content"]
    },
    "ToolCall": {
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "type": { "const": "function" },
        "function": {
          "type": "object",
          "properties": {
            "name": { "type": "string", "minLength": 1 },
            "arguments": {
              "type": "string",
              "description": "JSON-encoded function arguments"
            }
          },
          "required": ["name", "arguments"]
        }
      },
      "required": ["id", "type", "function"]
    },
    "ToolDefinition": {
      "type": "object",
      "properties": {
        "type": { "const": "function" },
        "function": {
          "type": "object",
          "properties": {
            "name": { "type": "string", "minLength": 1 },
            "description": { "type": "string" },
            "parameters": {
              "type": "object",
              "description": "JSON Schema for function parameters"
            }
          },
          "required": ["name", "description", "parameters"]
        }
      },
      "required": ["type", "function"]
    }
  }
}
