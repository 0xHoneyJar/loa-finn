{
  "name": "loa-finn",
  "version": "0.1.0",
  "type": "module",
  "description": "Minimal persistent Loa agent runtime using Pi SDK",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "dev": "tsx --watch src/index.ts",
    "smoke": "tsx scripts/smoke.ts",
    "typecheck": "tsc --noEmit",
    "test:wal": "tsx tests/finn/wal.test.ts",
    "test:persist": "tsx tests/finn/persistence-integration.test.ts",
    "test:cb": "tsx tests/finn/circuit-breaker.test.ts",
    "test:compound": "tsx tests/finn/compound-cycle.test.ts",
    "test:finn": "tsx tests/finn/wal.test.ts && tsx tests/finn/persistence-integration.test.ts && tsx tests/finn/circuit-breaker.test.ts && tsx tests/finn/compound-cycle.test.ts && tsx tests/finn/walpath-validation.test.ts && tsx tests/finn/kill-restart-resume.test.ts && tsx tests/finn/sandbox.test.ts",
    "test:sandbox": "tsx tests/finn/sandbox.test.ts",
    "test:upstream": "vitest run --config .claude/lib/persistence/vitest.config.ts",
    "bridgebuilder": "tsx src/bridgebuilder/entry.ts",
    "bridgebuilder:dry-run": "BRIDGEBUILDER_DRY_RUN=true tsx src/bridgebuilder/entry.ts",
    "test:bridgebuilder": "tsx tests/finn/bridgebuilder-r2-context.test.ts && tsx tests/finn/bridgebuilder-launch.test.ts"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.985.0",
    "@hono/node-server": "^1.19.9",
    "@mariozechner/pi-agent-core": "~0.52.6",
    "@mariozechner/pi-ai": "~0.52.6",
    "@mariozechner/pi-coding-agent": "~0.52.6",
    "@0xhoneyjar/loa-hounfour": "github:0xHoneyJar/loa-hounfour#v1.1.0",
    "@sinclair/typebox": "^0.34.48",
    "croner": "^10.0.1",
    "hono": "^4.11.9",
    "jose": "^6.1.3",
    "ulid": "^3.0.2",
    "ws": "^8.19.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/ws": "^8.18.1",
    "tsx": "^4.0.0",
    "typescript": "^5.7.0",
    "vitest": "^4.0.18"
  },
  "imports": {
    "#upstream-bridgebuilder/*": "./.claude/skills/bridgebuilder-review/dist/*"
  },
  "engines": {
    "node": ">=22"
  }
}
